// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
	"name": "JCD Dev Container",
	"image": "mcr.microsoft.com/devcontainers/rust:1",

	// HACK: Use /datadrive/jcd until the hard coded paths to /datadrive in the tests are cleaned up.
	"workspaceFolder": "/datadrive/jcd",
	"workspaceMount": "source=${localWorkspaceFolder},target=/datadrive/jcd,type=bind,consistency=cached",

	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"timonwong.shellcheck"
			]
		}
	}
}
